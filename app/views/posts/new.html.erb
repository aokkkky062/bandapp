<%= render "shared/header" %>
<div class='post-form'>
  <h1>練習報告</h1>
  <%=form_with model: @post, local: true do |f|%>
    <%= f.label :date, :練習日, class: 'post-form__label' %>
    <%= f.date_field :date, class: 'chat__room_name' %>

    <div class='post-form__field'>
      <div class='post-form__field--left'>
        <%= f.label :program, :練習曲, class: 'post-form__label'%>
      </div>
      <div class='post-form__field--right'>
        <%= f.text_area :program, class: 'chat__room_name post-form__input' %>
      </div>
    </div>

    <div class='post-form__field'>
      <div class='post-form__field--left'>
        <%= f.label :information, :事務連絡, class: 'post-form__label'%>
      </div>
      <div class='post-form__field--right'>
        <%= f.text_area :information, class: 'chat__room_name post-form__input' %>
      </div>
    </div>

    <div class='post-form__field'>
      <div class='post-form__field--left'>
        <%= f.label :feedback, :感想, class: 'post-form__label'%>
      </div>
      <div class='post-form__field--right'>
        <%= f.text_area :feedback, class: 'chat__room_name post-form__input' %>
      </div>
    </div>

    <div class='post-form__field'>
      <div class='post-form__field--left'></div>
      <div class='post-form__field--right'>
        <%= f.submit value: "送信", class: 'post-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>
